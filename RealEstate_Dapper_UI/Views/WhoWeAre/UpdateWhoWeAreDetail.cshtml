
@{
    ViewData["Title"] = "UpdateWhoWeAreDetail";
    Layout = "~/Views/Admin/Index.cshtml";
}

@model UpdateWhoWeAreDetailDto
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Alanı Güncelleme 

                </h6>
                <form method="post">
                    <input type="hidden" asp-for="WhoWeAreDetailID" />
                    <label>Personel Adı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Personel Unvanı</label>
                    <input type="text" asp-for="SubTitle" class="form-control" />
                    <br />
                    <label>Personel Mail Adresi</label>
                    <textarea rows="5" asp-for="Description1" class="form-control"></textarea>
                    <br />
                    <label>Personel Telefon Numarası</label>
                    <textarea rows="5" asp-for="Description2" class="form-control"></textarea>
                    <br />
                    <button class="btn btn-primary">Bilgileri Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>



